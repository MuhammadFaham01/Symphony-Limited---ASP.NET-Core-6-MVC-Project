@model Symphony_Limited.Models.Instructor

@{
    ViewData["Title"] = "Add Instructor";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Add Instructor</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                        <input asp-for="Name" class="form-control" required placeholder="Enter instructor's name" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" required placeholder="Enter email" />
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                        <input asp-for="Phone" type="tel" class="form-control" required placeholder="Enter phone number" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label fw-bold">Profile Image</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" required />
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4 py-2"><i class="fa fa-plus"></i> Add Instructor</button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2"><i class="fa fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>
