@model Instructor;
@{
    ViewData["Title"] = "Delete Instructor";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="text-center">
        <img src="https://cdn-icons-png.flaticon.com/512/6861/6861362.png" alt="Warning" width="120" class="mb-3">
        <h4 class="text-danger fw-bold">Are you sure you want to delete this instructor?</h4>
        <p class="text-muted">This action cannot be undone.</p>
    </div>

    <div class="border rounded p-3 bg-light mx-auto" style="max-width: 500px;">
        <h5 class="fw-bold">Instructor Details</h5>
        <dl class="row mt-3">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone:</dt>
            <dd class="col-sm-8">@Model.Phone</dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
    </div>
</div>
