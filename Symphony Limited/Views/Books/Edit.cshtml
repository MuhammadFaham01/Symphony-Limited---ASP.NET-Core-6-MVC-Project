@model Symphony_Limited.Models.Book
@{
    ViewData["Title"] = "Edit Book";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
        <h3 class="text-center mb-4">📖 Edit Book</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-bold">Title</label>
                <input type="text" asp-for="Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Author</label>
                <input type="text" asp-for="Author" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">ISBN</label>
                <input type="text" asp-for="Isbn" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Published Date</label>
                <input type="date" asp-for="PublishedDate" class="form-control" required />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">✅ Update Book</button>
                <a href="/Books" class="btn btn-secondary px-4 ms-2">🚫 Cancel</a>
            </div>
        </form>
    </div>
</div>
