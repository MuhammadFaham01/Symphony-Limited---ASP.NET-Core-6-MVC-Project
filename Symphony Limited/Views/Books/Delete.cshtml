@model Symphony_Limited.Models.Book
@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body text-center">
            <h3 class="text-danger">Are you sure?</h3>
            <p class="text-muted">This action cannot be undone.</p>

            <div class="border rounded p-3 bg-light mx-auto" style="max-width: 400px;">
                <h5 class="fw-bold">Book Details</h5>
                <p><strong>📖 Title:</strong> @Model.Title</p>
                <p><strong>✍ Author:</strong> @Model.Author</p>
                <p><strong>📑 ISBN:</strong> @Model.Isbn</p>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                <a href="/Books" class="btn btn-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
