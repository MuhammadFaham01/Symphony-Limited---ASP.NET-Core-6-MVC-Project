@model Symphony_Limited.Models.Book
@{
    ViewData["Title"] = "Add New Book";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Add New Book</h2>

        <form asp-action="Create" method="post" class="mt-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" asp-for="Title" class="form-control" placeholder="Enter book title" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Author</label>
                        <input type="text" asp-for="Author" class="form-control" placeholder="Enter author name" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">ISBN</label>
                        <input type="text" asp-for="Isbn" class="form-control" placeholder="Enter ISBN number" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Published Date</label>
                        <input type="date" asp-for="PublishedDate" class="form-control" required />
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-success px-4">Add Book</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Back</a>
            </div>
        </form>
    </div>
</div>