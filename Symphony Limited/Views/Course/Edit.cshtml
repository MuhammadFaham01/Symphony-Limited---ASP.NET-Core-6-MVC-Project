@model Symphony_Limited.Models.Course
@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm p-4" style="max-width: 500px; width: 100%;">
        <h2 class="mb-4 text-center">Edit Course</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label">Course Title</label>
                <input asp-for="Title" class="form-control border-light rounded" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control border-light rounded" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label class="control-label">Video File</label>
                <input type="file" name="videoFile" class="form-control border-light rounded" accept="video/*" />
            </div>

            <div class="form-group mt-3">
                <label asp-for="Type" class="control-label">Course Type</label>
                <select asp-for="Type" class="form-control border-light rounded">
                    <option value="Free">Free</option>
                    <option value="Premium">Premium</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary rounded-pill w-100 py-2">Update Course</button>
            </div>

            <div class="form-group mt-2">
                <a asp-action="Index" class="btn btn-secondary rounded-pill w-100 py-2">Cancel</a>
            </div>
        </form>
    </div>
</div>