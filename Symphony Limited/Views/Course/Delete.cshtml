@model Symphony_Limited.Models.Course
@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="text-center">
        <img src="https://cdn-icons-png.flaticon.com/512/6861/6861362.png" alt="Warning" width="120" class="mb-3">
        <h4 class="text-danger fw-bold">Are you sure you want to delete this course?</h4>
        <p class="text-muted">This action cannot be undone.</p>
    </div>

    <div class="border rounded p-3 bg-light mx-auto" style="max-width: 600px;">
        <h5 class="fw-bold">Course Details</h5>
        <dl class="row mt-3">
            <dt class="col-sm-4">Title:</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Description:</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Video URL:</dt>
            <dd class="col-sm-8"><a href="@Model.VideoUrl" target="_blank">@Model.VideoUrl</a></dd>

            <dt class="col-sm-4">Type:</dt>
            <dd class="col-sm-8">@Model.Type</dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4 py-2">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary px-4 py-2">Cancel</a>
    </div>
</div>
