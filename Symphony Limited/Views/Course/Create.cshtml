@model Symphony_Limited.Models.Course

@{
    ViewData["Title"] = "Create Course";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Create Course</h2>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="form-label fw-bold">Course Title</label>
                        <input asp-for="Title" class="form-control" required placeholder="Enter course title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Type" class="form-label fw-bold">Course Type</label>
                        <select asp-for="Type" class="form-control">
                            <option value="Free">Free</option>
                            <option value="Premium">Premium</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" required placeholder="Enter course description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-label fw-bold">Video File</label>
                        <input type="file" name="videoFile" class="form-control" accept="video/*" required />
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4 py-2"><i class="fa fa-plus"></i> Create Course</button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2"><i class="fa fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>